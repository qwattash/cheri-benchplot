#
# Configuration file generated by cheri-benchplot.
# See templates/assets/nginx/static.conf.jinja.
#

worker_processes auto;
worker_rlimit_nofile 10240;

events {
    # determines how much clients will be served per worker
    # max clients = worker_connections * worker_processes
    # max clients is also limited by the number of socket connections available on the system (~64k)
    worker_connections  10240;
    accept_mutex off;
    multi_accept off;
    use kqueue;
}

http {
    include       mime.types;
    default_type  application/octet-stream;

    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    error_log  error.log  crit;
    access_log off;

    sendfile        on;
    #tcp_nopush     on;
    #tcp_nodelay    on;

    # allow the server to close connection on non responding client, this will free up memory
    reset_timedout_connection on;

    # request timed out -- default 60
    client_body_timeout 10;

    # if client stop responding, free up memory -- default 60
    send_timeout 2;

    # server will close connection after this time -- default 75
    keepalive_timeout 300s;
    keepalive_requests 1000000;

    gzip  on;

    types_hash_bucket_size 128;
    variables_hash_bucket_size 128;

    server {
        listen 10080;
        listen 10443 ssl reuseport backlog=102400;
        server_name  cheri-nginx-benchmark.local;
        ssl_certificate server.crt;
        ssl_certificate_key server.key;

        root   cheri-nginx-www;

        location / {
            index  index.html index.htm;
        }

        location /rps/ {
            autoindex on;
        }
    }
}
