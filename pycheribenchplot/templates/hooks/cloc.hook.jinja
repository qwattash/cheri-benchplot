# Execute the cloc command to extract and parse diff information in a repository.

echo "Extract LoC diff from {{ cloc_config.repo_path }} {{ cloc_config.head_ref}}..{{ cloc_config.baseline_ref }}"

{% set baseline_suffix = "." + cloc_config.baseline_ref %}
{% set head_suffix = "." + cloc_config.head_ref %}
TMP_OUT="{{ cloc_output | path_parent }}/tmp"
BASELINE_OUT="${TMP_OUT}{{ baseline_suffix }}"
HEAD_OUT="${TMP_OUT}{{ head_suffix }}"
DIFF_OUT="${TMP_OUT}.diff{{ baseline_suffix }}{{ head_suffix }}"

{% macro accept_filter() %}
  {% if cloc_config.accept_filter -%}
    --match-d='{{ cloc_config.accept_filter }}'
  {%- endif %}
{% endmacro %}

{% macro reject_filter() %}
  {% if cloc_config.reject_filter -%}
    --not-match-d='{{ cloc_config.reject_filter }}'
  {%- endif %}
{% endmacro %}

{% macro baseline() %}
  {% if cloc_config.baseline_path != cloc_config.repo_path -%}
    {{ cloc_config.baseline_path }}
  {%- else -%}
    {{ cloc_config.baseline_ref }}
  {%- endif %}
{% endmacro %}

# Note: run in subshell
(cd {{ cloc_config.repo_path }} && \
	cloc --skip-uniqueness \
		 --file-encoding=UTF-8 \
		 --by-file \
		 --json \
		 --git \
		 --count-and-diff \
		 "--exclude-content=DO NOT EDIT" \
		 "--include-ext={{ cloc_config.accept_ext | join(',') | trim }}" \
		 {{ accept_filter() | trim }} {{ reject_filter() | trim }} \
		 "--report-file=${TMP_OUT}" \
		 {{ cloc_config.cloc_args | join(" ") }} \
		 {{ baseline() | trim }} \
		 {{ cloc_config.head_ref }})

# Extract outputs
mv ${DIFF_OUT} "{{ cloc_output }}"
mv ${BASELINE_OUT} "{{ cloc_baseline }}"
